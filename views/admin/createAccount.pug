extends ../layouts/adminMenu
block content
    h1 Create user 

    if errors
        each error in errors
            .alert.alert-danger= error

    .align-items-center
        form(action="/admin/createAccount" method="POST")
            .form-group 
                label Name
                input.form-control(name="name", type='text', value= values ? values.name : '') 

                label User Name
                input.form-control(name="username", type='text', value= values ? values.username : '') 

                label Password
                input.form-control(name="password", type='password', value= values ? values.password : '')

                label Role
                br
                input(type='radio', name='role', value='admin')
                label(for='admin') Admin
                br
                input(type='radio', name='role', value='manager')
                label(for='manager') Staff (Manager)
                br
                input(type='radio', name='role', value='trainer')
                label(for='trainer') Trainer
                br
                input(type='radio', name='role', value='trainee')
                label(for='trainee') Trainee

            button.btn.btn-success Create