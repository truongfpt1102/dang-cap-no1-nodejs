extends ../layouts/common.pug
block content
    h1 Create user 

    if errors
        each error in errors
            .alert.alert-danger= error

    .d-flex.align-items-center
        form(action="/users/create" method="POST")
            .form-group 
                label Name
                input.form-control(name="name", type='text', value= values ? values.name : '') 

                label Phone
                input.form-control(name="phone", type='text', value= values ? values.phone : '') 

                button.btn.btn-success Create