extends ../layouts/common.pug
block content

    h1 Fuck Users
    .d-flex.align-items-center 
        form(action="/users/search", method="GET" class="d-flex")
            input(type="text", name="q" value=question class="form-control")
            button(class="btn btn-primary ml-2") Search

    table.table 
        tr 
            th Name
            th Phone 
            th Actions 

        each user in users
            tr
                td= user.name
                td= user.phone
                td
                    a(href='/users/' + user.id) View 


    a.bnt.bnt-primary(href = '/users/create') Create user 